<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Vinna Declarative Sample Application</display-name>

    <filter>
        <filter-name>vinnaFilter</filter-name>
        <filter-class>vinna.VinnaFilter</filter-class>
        <init-param>
            <param-name>base-package</param-name>
            <param-value>vinna.samples.declarative</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>vinnaFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
